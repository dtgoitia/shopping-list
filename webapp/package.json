{
  "name": "shopping-list",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://davidtorralba.com/shopping-list",
  "dependencies": {
    "@blueprintjs/core": "^4.2.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.42",
    "@types/react": "^16.14.21",
    "@types/react-dom": "^16.9.14",
    "nanoid": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.6.2",
    "rxjs": "^7.8.0",
    "safety-match": "^0.4.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.4",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.5",
    "web-vitals": "^0.2.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ci": "vitest run",
    "preview": "vite preview",
    "clear_build": "rm -rf ./dist",
    "deploy": "gh-pages --dist=./dist --branch=gh-pages --repo=git@github.com:dtgoitia/shopping-list.git",
    "clean_gh_pages_cache": "rm -rf ./node_modules/.cache/gh-pages",
    "deploy_from_local": "npm run clear_build && npm run build && npm run clean_gh_pages_cache && npm run deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react-dom": "^17.0.11",
    "@types/react": "^17.0.37",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint": "^8.38.0",
    "gh-pages": "^5.0.0",
    "jest-watch-typeahead": "^0.6.5",
    "prettier": "^2.8.8",
    "serve": "^13.0.2",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint": "^15.6.3",
    "typescript": "^5.0.2",
    "vite-plugin-checker": "^0.6.0",
    "vite-plugin-pwa": "^0.16.4",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  }
}
